---
import justic1 from "../assets/justic5.webp"
import Button from "./button.astro"
import Icon from "./icon.astro"
import Logo from "./logo.astro"

---
<section class="relative bg-center bg-cover before:content-[''] before:absolute before:w-full before:h-full before:bg-black/70" style={`background-image: url('${justic1.src}')`}>
    <div class="container relative px-6 py-12 mx-auto">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-12 py-12">
            <div class="flex flex-col gap-y-6">
                <Logo primary="w-14 text-gray-50" scond="text-2xl text-white" href="/"/>
                <div class="mt-6 flex flex-col gap-4">
                    <div class="group flex items-center gap-2 font-ledger text-white">
                        <Icon primary="w-8 text-orange group-hover:text-white" path="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25"/>
                        <p>48-49 Russell Square, WC1B 4JP, London</p>
                    </div>
                    <div class="group flex items-center gap-2 font-ledger text-white">
                        <Icon primary="w-8 text-orange group-hover:text-white" path="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z"/>
                        <p>1 800 643 4300</p>
                    </div>
                    <div class="group flex items-center gap-2 font-ledger text-white">
                        <Icon primary="w-8 text-orange group-hover:text-white" path="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"/>
